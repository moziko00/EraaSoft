<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-12 col-lg-4 mb-4 mb-lg-0">
                    <div class="card">
                        <img src="~/images/@item.Img" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Specialization</p>
                            <a href="/Doctors/CompleteAppointment/@item.Name" class="btn btn-primary text-center">Book Appointment</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>





